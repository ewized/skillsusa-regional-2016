<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<GridPane fx:controller="grades.Student" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox alignment="center">
        <Label fx:id="header"  text="Add a course to see results..."/>
        <Button fx:id="add" onAction="#addCourse" text="Add Course"/>
        <TextArea fx:id="list" editable="false"/>
    </VBox>
</GridPane>